<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cliente.Views.EsperaView"
             xmlns:vm="clr-namespace:Cliente.ViewModels"
             Title="EsperaView">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#87CEEB" Offset="0.0" />
            <GradientStop Color="#ADD8E6" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.BindingContext>
        <vm:EsperaVM></vm:EsperaVM>
    </ContentPage.BindingContext>

    <Grid VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand">
        <VerticalStackLayout VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Padding="30"
                             Spacing="20"
                             MinimumWidthRequest="300"
                             MinimumHeightRequest="200">

            <Image Source="icon.png" MaximumWidthRequest="120" MaximumHeightRequest="120" HorizontalOptions="Center"/>

            <HorizontalStackLayout Spacing="5" Margin="5" HorizontalOptions="Center">
                <Label Text="Esperando jugadores para la sala " FontSize="22" TextColor="White" FontFamily="Comic Sans MS"/>
            </HorizontalStackLayout>

            <ActivityIndicator IsRunning="True" Color="#FF4081" MinimumWidthRequest="90" MinimumHeightRequest="90" HorizontalOptions="Center"/>

            <Label Text = "¡La diversión está por comenzar!" TextColor="White" HorizontalOptions="Center" FontFamily="Comic Sans MS"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>